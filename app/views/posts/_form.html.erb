<%= form_for @post do |f| %>
  <h3>Title</h3>
  <%= f.text_field :title, id: 'title-box' %>

  <h3>Body</h3>
  <%= f.text_field :body, id: 'body-box' %>

  <%= f.submit %>
<% end %>

<%= form_for @post do |f| %>
  <h3>Tags</h3>
  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name, {}, { class: "post-tag-boxes"}) %>
  <%= f.submit %>
<% end %>

<%= form_for @post do |f| %>
  <h3>Tags</h3>
  <%= f.collection_select(:tag_ids, Tag.all, :id, :name, {include_blank: true}, { multiple: true }) %>
  <%= f.submit %>
<% end %>

<%= form_for @post do |f| %>
  <h3>Categories</h3>
  <%= f.collection_radio_buttons(:category_id, Category.all, :id, :name) %>
  <%= f.submit %>
<% end %>

